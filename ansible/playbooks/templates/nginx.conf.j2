events {
    use                 epoll;
    worker_connections  128;
}

http {
{# # Node exporter scrape endpoint
    server {
        listen              {{ nginx_node_exporter_public_port }};
        location / {
            auth_basic      "Restricted";
            auth_basic_user_file  /etc/nginx/.htpasswd;
            proxy_pass      http://127.0.0.1:{{ nginx_node_exporter_local_port }};
        }
    } #}

# query service endpoint
    server {
        listen              {{ nginx_query_svc_public_port }};

        location / {
            auth_basic      "Restricted";
            auth_basic_user_file  /etc/nginx/.htpasswd;
            proxy_pass      http://127.0.0.1:{{ nginx_query_svc_local_port }};
            
        }
    }


}
