events {
    use                 epoll;
    worker_connections  128;
}

http {

# sftp service endpoint
    server {
        listen              {{ nginx_sftp_public_port }};

        location / {
            auth_basic      "Restricted";
            auth_basic_user_file  /etc/nginx/.htpasswd;
            proxy_pass      http://127.0.0.1:{{ sftp_port }};
            
        }
    }

